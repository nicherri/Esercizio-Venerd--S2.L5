@model IEnumerable<ScarpeCo.Models.ArticleViewModel>

@{
    ViewData["Title"] = "Vetrina Prodotti";
}

<h2 class="my-4 text-center">Vetrina Prodotti</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img class="card-img-top" src="@product.CoverImage" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Price.ToString("C")</p>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Details", "Home", new { id = product.Id })" class="btn btn-primary">Dettagli</a>
                </div>
            </div>
        </div>
    }
</div>
