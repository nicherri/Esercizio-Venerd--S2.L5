@model ScarpeCo.Models.ArticleViewModel

@{
    ViewData["Title"] = "Crea Nuovo Prodotto";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descrizione" class="control-label"></label>
        <textarea asp-for="Descrizione" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CoverImageFile" class="control-label"></label>
        <input asp-for="CoverImageFile" type="file" class="form-control" />
        <span asp-validation-for="CoverImageFile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdditionalImage1File" class="control-label"></label>
        <input asp-for="AdditionalImage1File" type="file" class="form-control" />
        <span asp-validation-for="AdditionalImage1File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AdditionalImage2File" class="control-label"></label>
        <input asp-for="AdditionalImage2File" type="file" class="form-control" />
        <span asp-validation-for="AdditionalImage2File" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crea" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
